---
// BookingModal - "Start a Project" Form & Contact Options
// Purpose: Lead capture form with context injection + Cal.com/WhatsApp options
import BriefForm from "../forms/BriefForm.astro";

const calLink = "p.james-booking/30min"; // Your Cal.com booking path
const whatsappNumber = "2347033302085"; // User's number
const whatsappMessage = "Hi P.James, I'm interested in working with you.";
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
---

<dialog
  id="booking-modal"
  style="margin: auto;"
  class="w-[min(95vw,600px)] rounded-[2rem] bg-panel border border-[rgb(var(--border)/0.1)] p-0 backdrop:bg-[rgb(var(--bg)/0.95)]"
>
  <div class="relative max-h-[90vh] overflow-y-auto p-4 md:p-6" data-lenis-prevent>
    <!-- Close Button -->
    <button
      id="booking-modal-close"
      class="absolute top-4 right-4 p-2 rounded-full hover:bg-zinc-800 transition z-10 text-zinc-400 hover:text-white"
      aria-label="Close booking modal"
    >
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 6L6 18M6 6l12 12" />
      </svg>
    </button>

    <!-- VIEW: SELECTION (Default for generic buttons) -->
    <div id="view-selection" class="view-section py-8 text-center space-y-8">
      <div>
        <h2 class="font-display font-bold text-2xl text-white mb-2">Let's Connect</h2>
        <p class="text-zinc-400 text-sm">Choose how you'd like to get in touch.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Option 1: Cal.com -->
        <button id="btn-show-cal" class="group relative overflow-hidden rounded-2xl bg-zinc-900 border border-zinc-800 p-6 hover:border-orange-500/50 hover:bg-zinc-800/50 transition-all duration-300 text-left">
          <div class="mb-4 inline-flex p-3 rounded-full bg-orange-500/10 text-orange-400 group-hover:bg-orange-500 group-hover:text-black transition-colors">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" />
            </svg>
          </div>
          <h3 class="font-bold text-white mb-1">Book a Call</h3>
          <p class="text-xs text-zinc-500">Schedule a 30-min strategy session.</p>
        </button>

        <!-- Option 2: WhatsApp -->
        <a href={whatsappUrl} target="_blank" rel="noopener noreferrer" class="group relative overflow-hidden rounded-2xl bg-zinc-900 border border-zinc-800 p-6 hover:border-green-500/50 hover:bg-zinc-800/50 transition-all duration-300 text-left block">
          <div class="mb-4 inline-flex p-3 rounded-full bg-green-500/10 text-green-400 group-hover:bg-green-500 group-hover:text-black transition-colors">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" stroke="none">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
          </div>
          <h3 class="font-bold text-white mb-1">WhatsApp</h3>
          <p class="text-xs text-zinc-500">Chat directly for quick questions.</p>
        </a>
      </div>

      <div class="pt-4 border-t border-zinc-800">
        <p class="text-sm text-zinc-500 mb-2">Have a project scope ready?</p>
        <button id="btn-go-to-form" class="text-orange-400 font-medium hover:underline text-sm">
          Fill the Brief &rarr;
        </button>
      </div>
    </div>

    <!-- VIEW: CAL.COM -->
    <div id="view-cal" class="view-section hidden">
      <div class="mb-4 flex items-center justify-between">
        <button id="back-to-selection-cal" class="text-xs text-zinc-500 hover:text-white flex items-center gap-1">
          &larr; Back
        </button>
        <span class="text-xs font-bold text-orange-400 tracking-widest uppercase">Strategy Call</span>
      </div>
      
      <!-- Cal Embed Container -->
      <div id="cal-embed-container" class="min-h-[400px] w-full bg-zinc-900/50 rounded-xl overflow-hidden skeleton-loader"></div>
    </div>

    <!-- VIEW: FORM (BriefForm) -->
    <div id="view-form" class="view-section hidden">
      <div class="mb-2 flex items-center justify-between">
        <button id="back-to-selection-form" class="text-xs text-zinc-500 hover:text-white flex items-center gap-1">
          &larr; Back options
        </button>
      </div>
      <!-- Brief Form Component -->
      <BriefForm />
    </div>
    
  </div>
</dialog>

<script define:vars={{ calLink }}>
  const initBookingModal = () => {
    const modal = document.getElementById("booking-modal");
    const closeBtn = document.getElementById("booking-modal-close");
    
    // Views
    const viewSelection = document.getElementById("view-selection");
    const viewCal = document.getElementById("view-cal");
    const viewForm = document.getElementById("view-form");
    
    // Buttons
    const btnShowCal = document.getElementById("btn-show-cal");
    const btnGoToForm = document.getElementById("btn-go-to-form");
    const btnBackCal = document.getElementById("back-to-selection-cal");
    const btnBackForm = document.getElementById("back-to-selection-form");

    if (!modal || !closeBtn) return;

    // --- State Management ---
    const switchView = (viewName) => {
      [viewSelection, viewCal, viewForm].forEach(el => el?.classList.add("hidden"));
      if (viewName === 'selection') viewSelection?.classList.remove("hidden");
      if (viewName === 'cal') {
        viewCal?.classList.remove("hidden");
        initCalEmbed(); // Load Cal only when needed
      }
      if (viewName === 'form') viewForm?.classList.remove("hidden");
    };

    // --- Event Listeners ---
    
    // Open Modal Listener (Global)
    window.addEventListener("open-booking-modal", () => {
      if (modal.open) return; // Prevent double-open error
      modal.showModal();
      
      // Check context from BaseLayout injection
      const isPricingContext = modal.dataset.context === 'pricing';
      
      if (isPricingContext) {
        switchView('form');
        // Hide back button if forced by pricing
        if(btnBackForm) btnBackForm.style.display = 'none'; 
      } else {
        switchView('selection');
        // Show back button if user navigates manually
        if(btnBackForm) btnBackForm.style.display = 'flex';
      }
    });

    closeBtn.addEventListener("click", () => modal.close());
    modal.addEventListener("click", (e) => {
      if (e.target === modal) modal.close();
    });

    // View Navigation
    btnShowCal?.addEventListener("click", () => switchView('cal'));
    
    // "Fill the Brief" button - close modal and scroll to contact section
    btnGoToForm?.addEventListener("click", () => {
      modal.close();
      // Small delay to let modal close animation finish
      setTimeout(() => {
        const contactSection = document.getElementById('contact');
        if (contactSection) {
          contactSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      }, 100);
    });
    
    btnBackCal?.addEventListener("click", () => switchView('selection'));
    btnBackForm?.addEventListener("click", () => switchView('selection'));
  };

  // --- Cal.com Logic ---
  let calInitialized = false;
  const initCalEmbed = () => {
    if (calInitialized) return;
    
    const container = document.getElementById("cal-embed-container");
    if (!container) return;

    if (typeof window.Cal !== 'undefined') {
      try {
        window.Cal("inline", {
          elementOrSelector: "#cal-embed-container",
          calLink: calLink,
          layout: "month_view",
          config: { theme: "dark" }
        });
        container.classList.remove("skeleton-loader");
        calInitialized = true;
      } catch (err) {
        console.warn("Cal failed:", err);
      }
    }
  };

  // Lenis scroll control
  const toggleLenis = (pause) => {
    const lenis = window.lenis;
    if (lenis) pause ? lenis.stop() : lenis.start();
    document.body.style.overflow = pause ? 'hidden' : '';
  };

  document.addEventListener("DOMContentLoaded", initBookingModal);
  document.addEventListener("astro:page-load", initBookingModal);

  // Hook into dialog open/close for Lenis
  const originalShowModal = HTMLDialogElement.prototype.showModal;
  const originalClose = HTMLDialogElement.prototype.close;

  HTMLDialogElement.prototype.showModal = function() {
    if (this.id === 'booking-modal') toggleLenis(true);
    originalShowModal.call(this);
  };

  HTMLDialogElement.prototype.close = function() {
    if (this.id === 'booking-modal') toggleLenis(false);
    originalClose.call(this);
  };
</script>
