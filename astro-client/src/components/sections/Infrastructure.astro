---
// Infrastructure section - Technical Authority Pillars
interface Pillar {
  icon: string;
  title: string;
  body: string;
}

const pillars: Pillar[] = [
  {
    icon: "lightning",
    title: "Global Velocity",
    body: "Built on the Vercel Edge Network. We engineer sites that load in milliseconds, boosting SEO rank and conversion rates instantly.",
  },
  {
    icon: "brain",
    title: "Native Intelligence",
    body: "Deep integration with LLMs. Automated lead qualification and dynamic content that adapts to user behavior in real-time.",
  },
  {
    icon: "shield",
    title: "Enterprise Grade",
    body: "PostgreSQL architecture ensures your data is structured and secure. Built to scale from 100 to 1 million visitors without breaking.",
  },
];
---

<section id="infrastructure" class="py-[var(--space-5)] container-fluid">
  <div class="mb-12">
    <p class="text-[var(--step--1)] uppercase tracking-[0.25em] text-[rgb(var(--accent))] font-bold mb-3">
      The Infrastructure
    </p>
    <h2 class="font-display font-bold text-[var(--step-3)] leading-[1.1]">
      Engineered for speed, scale, and autonomy.
    </h2>
  </div>
  
  <div class="grid gap-6 [grid-template-columns:repeat(auto-fit,minmax(min(18rem,100%),1fr))]">
    {pillars.map((pillar) => (
      <div class="pillar-card group">
        <!-- Icon -->
        <div class="icon-container">
          {pillar.icon === "lightning" && (
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-8 h-8">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
            </svg>
          )}
          {pillar.icon === "brain" && (
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-8 h-8">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
            </svg>
          )}
          {pillar.icon === "shield" && (
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-8 h-8">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
            </svg>
          )}
        </div>
        
        <!-- Content -->
        <h3 class="font-display font-bold text-xl text-text mb-3 group-hover:text-[rgb(var(--accent))] transition-colors">
          {pillar.title}
        </h3>
        <p class="text-muted leading-relaxed">
          {pillar.body}
        </p>
      </div>
    ))}
  </div>
</section>

<style>
  .pillar-card {
    background: rgb(var(--panel));
    border: 1px solid rgb(var(--border) / 0.1);
    border-radius: var(--radius-lg, 16px);
    padding: var(--space-4);
    transition: all 0.2s ease-out;
  }

  .pillar-card:hover {
    border-color: rgb(var(--accent) / 0.3);
    transform: translateY(-2px);
  }

  .icon-container {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3.5rem;
    height: 3.5rem;
    border-radius: var(--radius-md, 12px);
    background: rgb(var(--accent) / 0.1);
    color: rgb(var(--accent));
    margin-bottom: 1.5rem;
  }

  .pillar-card:hover .icon-container {
    background: rgb(var(--accent) / 0.2);
  }
</style>
