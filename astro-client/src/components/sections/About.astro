---
// About section - "AI Brand Architect" Bento Box Design
interface ProcessStep {
  number: string;
  title: string;
  description: string;
}

const processSteps: ProcessStep[] = [
  { 
    number: "01", 
    title: "DISCOVERY & STRATEGY", 
    description: "We decode your market position and engineer a roadmap for dominance. No guessing." 
  },
  { 
    number: "02", 
    title: "ARCHITECTURE & DEPLOYMENT", 
    description: "High-fidelity brand systems fused with robust code. Built for speed, scale, and authority." 
  },
  { 
    number: "03", 
    title: "REVENUE ENGINE", 
    description: "AI-driven pipelines that nurture leads and close deals 24/7. Turn traffic into cash flow." 
  },
];
---

<section id="about" class="py-[var(--space-5)] container-fluid">
  <!-- Section Header -->
  <div class="mb-12">
    <p class="text-[var(--step--1)] uppercase tracking-[0.18em] text-[rgb(var(--accent))] font-medium mb-3">
      About
    </p>
    <h2 class="font-display font-bold text-[var(--step-3)] leading-[1.1]">
      The Architect.
    </h2>
  </div>
  
  <!-- Bento Grid -->
  <div class="grid gap-4 lg:grid-cols-[1fr_1.2fr]">
    
    <!-- Left Card: Profile -->
    <div class="bento-card group">
      <!-- Photo -->
      <div class="profile-image-container mb-6">
        <img
          src="/profile.jpg"
          alt="P. James - AI Brand Architect"
          class="profile-image"
        />
        <div class="profile-glow"></div>
      </div>
      
      <!-- Identity -->
      <div class="text-center lg:text-left">
        <h3 class="font-display font-bold text-[var(--step-2)] text-text mb-1">
          P. James | AI Brand Architect
        </h3>
        <p class="flex items-center justify-center lg:justify-start gap-2 text-sm">
          <svg class="w-4 h-4 text-[rgb(var(--accent))]" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
          </svg>
          <span class="text-[rgb(var(--accent))] font-medium">Based in Nigeria</span>
          <span class="text-muted">â€¢</span>
          <span class="text-muted">Active Globally</span>
        </p>
      </div>
      
      <!-- Bio -->
      <p class="mt-6 text-[var(--step-0)] text-muted leading-relaxed">
        I architect digital ecosystems engineered for growth. Where others see "pages", I see pipelines. 
        My systems are built on a simple premise:
        <span class="text-text font-medium">clarity converts, confusion costs.</span>
      </p>
    </div>
    
    <!-- Right Card: Process Modules -->
    <div class="bento-card">
      <h3 class="font-display font-bold text-[var(--step-1)] text-text mb-6 flex items-center gap-3">
        <span class="w-8 h-px bg-[rgb(var(--accent))]"></span>
        THE PROCESS
      </h3>
      
      <div class="space-y-3">
        {processSteps.map((step) => (
          <div class="process-module group">
            <div class="flex items-start gap-4">
              <!-- Step Number -->
              <div class="step-number">
                {step.number}
              </div>
              
              <!-- Content -->
              <div class="flex-1">
                <h4 class="font-display font-bold text-sm tracking-wide text-text group-hover:text-[rgb(var(--accent))] transition-colors">
                  {step.title}
                </h4>
                <p class="text-sm text-muted leading-relaxed mt-1">
                  {step.description}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
    
  </div>
</section>

<style>
  /* Bento Card Base */
  .bento-card {
    background: rgb(var(--panel));
    border: 1px solid rgb(var(--border) / 0.1);
    border-radius: var(--radius-lg, 16px);
    padding: var(--space-4);
    transition: all 0.2s ease-out;
  }

  .bento-card:hover {
    border-color: rgb(var(--border) / 0.15);
  }

  /* Profile Image */
  .profile-image-container {
    position: relative;
    width: 140px;
    height: 140px;
    margin-inline: auto;
  }

  @media (min-width: 1024px) {
    .profile-image-container {
      margin-inline: 0;
    }
  }

  .profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: var(--radius-md, 12px);
    border: 1px solid rgb(var(--border) / 0.1);
  }

  .profile-glow {
    position: absolute;
    inset: -4px;
    background: linear-gradient(135deg, rgb(var(--accent) / 0.2), transparent 60%);
    border-radius: var(--radius-lg, 16px);
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s;
  }

  .group:hover .profile-glow {
    opacity: 1;
  }

  /* Process Module */
  .process-module {
    background: rgb(var(--bg) / 0.5);
    border: 1px solid rgb(var(--border) / 0.08);
    border-radius: var(--radius-md, 12px);
    padding: 1rem 1.25rem;
    transition: all 0.2s ease-out;
  }

  .process-module:hover {
    background: rgb(var(--bg) / 0.8);
    border-color: rgb(var(--accent) / 0.2);
    transform: translateX(4px);
  }

  .step-number {
    font-family: var(--font-display), ui-sans-serif, system-ui, sans-serif;
    font-weight: 700;
    font-size: 0.75rem;
    color: rgb(var(--accent));
    background: rgb(var(--accent) / 0.1);
    border: 1px solid rgb(var(--accent) / 0.2);
    border-radius: 6px;
    padding: 0.25rem 0.5rem;
    min-width: 2rem;
    text-align: center;
    flex-shrink: 0;
  }

  /* Mobile Stacking */
  @media (max-width: 1023px) {
    .bento-card {
      padding: var(--space-3);
    }

    .process-module {
      padding: 1rem;
    }
  }
</style>
