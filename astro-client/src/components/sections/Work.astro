---
// Work section - System Architectures / Solutions Gallery
// Links to dedicated case study pages (no modal)
import ProjectCard from "../ui/ProjectCard.astro";
import { projects } from "../../data/projects";
---

<section id="work" class="py-36 container-fluid">
  <div class="mb-8">
    <p class="text-[var(--step--1)] uppercase tracking-[0.25em] text-orange-400 font-bold mb-3">
      System Architectures
    </p>
    <h2 class="font-display font-bold text-[var(--step-3)] leading-[1.1] max-w-[28ch] text-white">
      Deployable frameworks engineered for high-velocity growth.
    </h2>
  </div>

  <div class="grid gap-6 [grid-template-columns:repeat(auto-fit,minmax(min(20rem,100%),1fr))]">
    {projects.slice(0, 3).map((project) => (
      <ProjectCard {...project} />
    ))}
  </div>
  
  <div class="mt-8 md:mt-12 flex justify-center">
    <a 
      href="/work" 
      class="inline-flex items-center gap-2 border border-orange-500/50 text-orange-500 hover:bg-orange-500/10 px-8 py-4 rounded-full uppercase tracking-wider text-sm font-bold transition-all group"
    >
      Explore Intelligence Vault
      <span class="group-hover:translate-x-1 transition-transform">&rarr;</span>
    </a>
  </div>
  
  <div id="work-bottom"></div>
</section>
