---
// Footer section with brief form, chatbot, and newsletter
import BriefForm from "../forms/BriefForm.astro";
import NewsletterForm from "../forms/NewsletterForm.astro";
import SocialLinks from "../ui/SocialLinks.astro";
import ChatBot from "../chat/ChatBot.tsx";
---

<footer id="contact" class="border-t border-[rgb(var(--border)/0.1)] bg-bg py-[var(--space-5)]">
  <div class="container-fluid grid grid-cols-1 lg:grid-cols-2 gap-8 items-stretch">
    <!-- Col 1: Form (LEFT) -->
    <BriefForm />

    <!-- Col 2: Chatbot (RIGHT) -->
    <div class="chatbot-wrapper">
      <ChatBot client:visible />
    </div>
  </div>

  <!-- Newsletter Section -->
  <div class="container-fluid mt-12 pt-8 border-t border-white/10">
    <div class="max-w-md mx-auto">
      <NewsletterForm />
    </div>
  </div>

  <!-- Social Links & Copyright -->
  <div class="container-fluid mt-12 pt-8 border-t border-white/10">
    <div class="flex flex-col items-center gap-6">
      <SocialLinks />
      <p class="text-xs text-muted opacity-50">
        Â© 2026 P. James. All rights reserved.
      </p>
    </div>
  </div>
</footer>
