---
// Main landing page - assembles all components
// ARCHITECTURE: "Money Magnet" Conversion Funnel
// COLOR PROTOCOL: "Void & Ember" (Black + Orange)
import BaseLayout from "../layouts/BaseLayout.astro";

// Layout components
import Navbar from "../components/layout/Navbar.astro";
import MobileNavOverlay from "../components/layout/MobileNavOverlay.astro";
import FloatingAction from "../components/layout/FloatingAction.astro";

// Section components
import Hero from "../components/sections/Hero.astro";
import TheShift from "../components/sections/TheShift.astro";
import Services from "../components/sections/Services.astro";
import Work from "../components/sections/Work.astro";
import Infrastructure from "../components/sections/Infrastructure.astro";
import Process from "../components/sections/Process.astro";
import About from "../components/sections/About.astro";
import FAQ from "../components/sections/FAQ.astro";
import BookingCTA from "../components/sections/BookingCTA.astro";
import Footer from "../components/sections/Footer.astro";

// Modal components
import BookingModal from "../components/modals/BookingModal.astro";
---

<BaseLayout>
  <!-- Navigation -->
  <Navbar />
  <MobileNavOverlay />

  <!-- Main Content -->
  <main>
    <Hero />
    <TheShift />
    <Services />
    <Work />
    <Infrastructure />
    <Process />
    <About />
    <FAQ />
    <BookingCTA />
  </main>

  <!-- Footer -->
  <Footer />

  <!-- Modals -->
  <BookingModal />

  <!-- Floating Action: Desktop = Back to Top, Mobile = Book CTA -->
  <FloatingAction />
</BaseLayout>
