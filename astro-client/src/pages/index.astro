---
// Main landing page - assembles all components
// ARCHITECTURE: "Money Magnet" Conversion Funnel
// COLOR PROTOCOL: "Void & Ember" (Black + Orange)
import BaseLayout from "../layouts/BaseLayout.astro";

// Layout components
import Navbar from "../components/layout/Navbar.astro";
import ChatBot from "../components/chat/ChatBot.tsx";

// Section components
import Hero from "../components/sections/Hero.astro";
import TheShift from "../components/sections/TheShift.astro";
import Services from "../components/sections/Services.astro";
import Work from "../components/sections/Work.astro";
import Infrastructure from "../components/sections/Infrastructure.astro";
import Process from "../components/sections/Process.astro";
import About from "../components/sections/About.astro";
import FAQ from "../components/sections/FAQ.astro";
import Contact from "../components/sections/Contact.astro";
import Footer from "../components/sections/Footer.astro";

// Modal components
import BookingModal from "../components/modals/BookingModal.astro";
---

<BaseLayout>
  <!-- Navigation -->
  <Navbar />

  <!-- Main Content -->
  <main>
    <Hero />
    <TheShift />
    <Services />
    <Work />
    <Infrastructure />
    <Process />
    <About />
    <FAQ />
    <Contact />
  </main>

  <!-- Footer -->
  <Footer />

  <!-- Modals -->
  <BookingModal />

  <!-- ChatBot Floating Widget -->
  <ChatBot client:only="react" />
</BaseLayout>
