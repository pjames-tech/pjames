---
// Main landing page - assembles all components
import BaseLayout from "../layouts/BaseLayout.astro";

// Layout components
import Navbar from "../components/layout/Navbar.astro";
import MobileNavOverlay from "../components/layout/MobileNavOverlay.astro";
import BackToTop from "../components/layout/BackToTop.astro";

// Section components
import Hero from "../components/sections/Hero.astro";
import TheShift from "../components/sections/TheShift.astro";
import Services from "../components/sections/Services.astro";
import Work from "../components/sections/Work.astro";
import Infrastructure from "../components/sections/Infrastructure.astro";
import About from "../components/sections/About.astro";
import Footer from "../components/sections/Footer.astro";

// Modal components
import PricingModal from "../components/modals/PricingModal.astro";
import ProjectModal from "../components/modals/ProjectModal.astro";
---

<BaseLayout>
  <!-- Navigation -->
  <Navbar />
  <MobileNavOverlay />

  <!-- Main Content -->
  <main>
    <Hero />
    <TheShift />
    <Services />
    <Work />
    <Infrastructure />
    <About />
  </main>

  <!-- Footer (includes contact forms and chatbot) -->
  <Footer />

  <!-- Modals -->
  <PricingModal />
  <ProjectModal />

  <!-- Utilities -->
  <BackToTop />
</BaseLayout>
