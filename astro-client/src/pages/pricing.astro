---
// Pricing & Packages Page - 4-Card Product Ladder
// Instagram Hook → Design → Standard → Full Stack
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/layout/Navbar.astro";
import ChatBot from "../components/chat/ChatBot.tsx";
import Footer from "../components/sections/Footer.astro";
import BookingModal from "../components/modals/BookingModal.astro";

interface Package {
  name: string;
  price: string;
  subtitle: string;
  features: string[];
  badge?: string;
  badgeStyle?: 'popular' | 'traction';
  cta: string;
  ctaStyle: 'primary' | 'secondary';
}

const packages: Package[] = [
  {
    name: "Digital Visacard",
    price: "$149",
    subtitle: "Your digital handshake + Auto-Sales.",
    badge: "HIGH TRACTION",
    badgeStyle: "traction",
    features: [
      "One-Page Bio Portfolio (Linktree Killer)",
      "IG DM Auto-Reply (Keyword Trigger)",
      "WhatsApp Direct Integration",
      "\"Save to Contacts\" Feature"
    ],
    cta: "Launch Visacard",
    ctaStyle: "secondary"
  },
  {
    name: "Identity Forge",
    price: "$349",
    subtitle: "Professional brand DNA for new businesses.",
    features: [
      "Logo Design (3 Concepts)",
      "Color & Typography System",
      "Social Media Kit (5 Templates)",
      "Brand Voice Guide"
    ],
    cta: "Forge Identity",
    ctaStyle: "secondary"
  },
  {
    name: "Business Nexus",
    price: "$597",
    subtitle: "The corporate standard. 5-Page HQ.",
    features: [
      "5-Page Official Website",
      "CMS Integration (Blog/News)",
      "Google Map & SEO Setup",
      "Contact Form Automation",
      "5-Day Delivery"
    ],
    cta: "Build Nexus",
    ctaStyle: "primary"
  },
  {
    name: "Authority Ecosystem",
    price: "$1,197",
    subtitle: "Design + Web + Full AI Agents.",
    features: [
      "Everything in Identity Forge",
      "Everything in Business Nexus",
      "Advanced AI Lead Chatbot (GPT-4)",
      "CRM Pipeline Architecture",
      "Priority Support"
    ],
    cta: "Initialize Ecosystem",
    ctaStyle: "secondary"
  }
];
---

<BaseLayout title="Pricing & Packages | P. James" description="Balanced pricing for every stage of growth. From $149 digital cards to full authority ecosystems.">
  
  <main class="min-h-screen pt-8 md:pt-16 pb-16">
    <!-- Hero -->
    <section class="container-fluid mb-12">
      <a href="/" class="inline-flex items-center gap-2 text-muted hover:text-[rgb(var(--accent))] transition mb-6 group">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="group-hover:-translate-x-1 transition-transform">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Back to Home
      </a>
      
      <div class="text-left">
        <h1 class="text-4xl md:text-5xl font-bold text-text mb-4 leading-tight">
          Results-Driven <span class="text-[rgb(var(--accent))]">Pricing</span>
        </h1>
        <p class="text-lg text-muted max-w-2xl">
          From quick wins to full ecosystems. Choose the tier that matches your ambition.
        </p>
      </div>
    </section>
    
    <!-- 4-Card Pricing Grid -->
    <section class="container-fluid">
      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 max-w-7xl mx-auto">
        {packages.map((pkg) => (
          <div class={`pricing-card relative rounded-[var(--radius-xl)] p-6 border flex flex-col h-full transition-all duration-300 hover:translate-y-[-4px] ${
            pkg.ctaStyle === 'primary'
              ? 'bg-gradient-to-b from-[rgb(var(--accent)/0.08)] to-transparent border-[rgb(var(--accent)/0.3)] shadow-[0_0_40px_-10px_rgb(var(--accent)/0.3)]' 
              : pkg.badgeStyle === 'traction'
                ? 'bg-panel border-[rgb(var(--accent)/0.2)]'
                : 'bg-panel border-[rgb(var(--border)/0.1)] hover:border-[rgb(var(--border)/0.2)]'
          }`}>
            {/* Badge */}
            {pkg.badge && (
              <div class="absolute -top-3 left-1/2 -translate-x-1/2">
                <span class={`px-3 py-1 text-[9px] font-black uppercase tracking-widest rounded-full shadow-lg whitespace-nowrap ${
                  pkg.badgeStyle === 'traction' 
                    ? 'bg-[rgb(var(--accent))] text-[rgb(var(--bg))]'
                    : 'bg-[rgb(var(--accent))] text-[rgb(var(--bg))]'
                }`}>
                  {pkg.badge}
                </span>
              </div>
            )}
            
            {/* Header */}
            <div class="mb-5">
              <h3 class="text-lg font-bold text-text mb-1">{pkg.name}</h3>
              <p class="text-xs text-muted mb-3 leading-relaxed">{pkg.subtitle}</p>
              
              {/* Price */}
              <div class="flex items-baseline gap-1">
                <span class="text-4xl font-bold text-text tracking-tight">{pkg.price}</span>
                <span class="text-muted text-xs">USD</span>
              </div>
            </div>
            
            {/* Features */}
            <ul class="space-y-2.5 mb-6 flex-1">
              {pkg.features.map((feature) => (
                <li class="flex items-start gap-2 text-sm text-text/80">
                  <svg class="w-4 h-4 text-[rgb(var(--accent))] flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
            
            {/* CTA Button with Data Injection */}
            <button 
              class={`action-book w-full py-3 px-4 rounded-full font-bold text-sm transition-all duration-300 ${
                pkg.ctaStyle === 'primary'
                  ? 'bg-[rgb(var(--accent))] text-[rgb(var(--bg))] hover:shadow-[0_0_25px_-5px_rgb(var(--accent)/0.5)] hover:scale-[1.02]'
                  : 'bg-panel border border-[rgb(var(--border)/0.2)] text-text hover:border-[rgb(var(--accent)/0.5)] hover:text-[rgb(var(--accent))]'
              }`}
              data-package={pkg.name}
              data-price={pkg.price}
            >
              {pkg.cta}
            </button>
          </div>
        ))}
      </div>
    </section>
    
    <!-- Trust Indicators -->
    <section class="container-fluid mt-12 text-center">
      <div class="flex flex-wrap justify-center gap-6 text-sm text-muted">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-[rgb(var(--accent))]" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span>No Hidden Fees</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-[rgb(var(--accent))]" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span>Fast Turnaround</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-[rgb(var(--accent))]" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"/>
          </svg>
          <span>WhatsApp Support</span>
        </div>
      </div>
    </section>
    
    <!-- Custom Projects CTA -->
    <section class="container-fluid mt-16 max-w-3xl mx-auto text-center">
      <div class="p-8 rounded-[var(--radius-xl)] bg-panel border border-[rgb(var(--border)/0.1)]">
        <h2 class="text-2xl font-bold text-text mb-3">Need Something Custom?</h2>
        <p class="text-muted mb-6">
          Every business is unique. Let's discuss your specific requirements.
        </p>
        <button 
          class="action-book inline-flex items-center gap-2 px-8 py-4 bg-[rgb(var(--accent))] text-[rgb(var(--bg))] font-bold rounded-full hover:shadow-[0_0_40px_-10px_rgb(var(--accent)/0.6)] transition-all hover:scale-105"
        >
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
            <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
          </svg>
          Let's Talk
        </button>
      </div>
    </section>
  </main>
  
  <Footer />
  <BookingModal />
  <ChatBot client:only="react" />
</BaseLayout>

<style>
  .pricing-card {
    backdrop-filter: none; /* Performance */
  }
</style>
