---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectCard from "../components/ui/ProjectCard.astro";
import BookingModal from "../components/modals/BookingModal.astro";
import { projects } from "../data/projects";
---

<BaseLayout title="Work | P. JAMES" description="Full archive of system architectures and deployed frameworks.">
  <main class="pt-12 pb-24 container-fluid min-h-screen">
    <div class="mb-12">
       <!-- Back Link -->
       <div class="mb-8">
         <a href="/" class="inline-flex items-center gap-2 text-zinc-400 hover:text-orange-400 transition group">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="group-hover:-translate-x-1 transition-transform">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          Back to Home
        </a>
       </div>

       <div class="inline-block px-3 py-1 bg-zinc-900 border border-zinc-800 rounded-full mb-4">
        <span class="text-xs font-bold text-zinc-400 tracking-wider">INTELLIGENCE VAULT</span>
      </div>
      <h1 class="font-display font-bold text-4xl md:text-6xl text-white mb-6">
        System Architectures 
      </h1>
       <p class="max-w-2xl text-zinc-400 text-lg">
        A complete catalog of deployable frameworks, automated pipelines, and brand identity systems engineered for growth.
      </p>
    </div>

    <!-- Scalable Project Grid -->
    <div class="grid gap-8 md:gap-y-12 [grid-template-columns:repeat(auto-fit,minmax(min(20rem,100%),1fr))] mb-24">
      {projects.map((project) => (
        <ProjectCard {...project} />
      ))}
    </div>

    <!-- Ready to Build CTA -->
    <div class="bg-panel border border-[rgb(var(--border)/0.1)] rounded-3xl p-8 md:p-12 text-center relative overflow-hidden group">
       <!-- Glow / Hover Effect -->
       <div class="absolute inset-0 bg-gradient-to-r from-orange-500/0 via-orange-500/5 to-orange-500/0 opacity-0 group-hover:opacity-100 transition-opacity duration-700 pointer-events-none"></div>
       
       <h2 class="font-display font-bold text-3xl md:text-4xl text-white mb-6 relative z-10">
        Ready to deploy your own system?
       </h2>
       <p class="text-zinc-400 max-w-xl mx-auto mb-8 relative z-10">
        Stop relying on manual inputs. Build an architecture that scales with your ambition.
       </p>
       <button class="action-book relative z-10 inline-flex items-center gap-2 bg-orange-500 text-black px-8 py-4 rounded-full font-bold hover:bg-orange-400 transition-colors">
         Start a Project
         <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
       </button>
    </div>

  </main>

  <BookingModal />
</BaseLayout>
